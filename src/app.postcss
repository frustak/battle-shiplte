@tailwind base;
/* Write your global styles here, in PostCSS syntax */
@tailwind components;
@tailwind utilities;

@layer components {
	.btn {
		@apply p-2 rounded transition disabled:bg-gray-400 disabled:cursor-wait;
	}

	.btn-blue {
		@apply btn bg-blue-500 text-white hover:bg-blue-600 focus:bg-blue-600;
	}

	.btn-red {
		@apply btn bg-red-500 text-white hover:bg-red-600 focus:bg-red-600;
	}
}
